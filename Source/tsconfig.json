{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": "app/",
		"sourceMap": true,
		"target": "es5",
		"module": "amd",
		"moduleResolution": "classic",
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
	},
	"filesGlob": [
		"./app/**/*.ts",
		"./test/**/*.ts",
		"./typings/**/*.d.ts",
		"./jspm_packages/**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"gulpfile.js",
		"config.js",
		"karma.conf.js"
	],
	"atom": {
		"rewriteTsconfig": false
	}
}
